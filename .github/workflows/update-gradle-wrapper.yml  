name: Update Gradle Wrapper

on:
  schedule:
    - cron: "0 0 1 * *"

  push:
    branches:
      - master

jobs:
  update-gradle-wrapper:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: Update Gradle Wrapper
        uses: gradle-update/update-gradle-wrapper-action@v1
        with:
          paths: gradle-plugin/**